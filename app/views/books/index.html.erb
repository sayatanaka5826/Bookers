<body>
<h2><strong>Books</strong></h2>

<% @books.each do |book| %>

<table>
  <thead>
      <td>Title</td>
      <td>Body</td>
      <td colspan="3"></td>
  </thead>
 
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to 'Delete', book_path(book.id), method: :delete, "data-confirm" => "Are you sure you want to delete this item?" %></td>
    </tr>
  </tbody>
</table>

<% end %>

</body>

<h2><strong>New Book</strong></h2>

