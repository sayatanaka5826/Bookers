<body>
<h2><strong>Books</strong></h2>
<table>
  <thead>
      <tr>
          <td>Title</td>
          <td>Body</td>
          <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>

<% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure you want to delete this item?" %></td>
    </tr>
<% end %>
  </tbody>
   </table>
</body>

<h2><strong>New Book</strong></h2>

<% if @book.errors.any? %>
 <%= @book.errors.count %>error prohibited this book from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<span class="new-submit">
<%= f.submit 'Create Book' %>
</span>

<% end %>
